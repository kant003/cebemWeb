---

interface Props {
	title: string;
	description: string;
	img: string;
    icon: string;
}

const { img, title, icon, description } = Astro.props;
---


<article class="group max-w-sm bg-white border border-gray-200 hover:ring-1 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
        <img 
        class="hover:animate-jump first-line:rounded-t-lg w-full max-h-60 object-cover object-top group-hover:opacity-75" 
        src={img} alt={title} />
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold text-balance tracking-tight text-gray-900 dark:text-white">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 group-hover:stroke-white"
        >{description}</p>
        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            Leer m√°s
             <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</article>
