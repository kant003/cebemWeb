// src/components/Newsletter.astro
---

<section class="newsletter">
    <div class="container">
        <div class="newsletter-content animate-on-scroll">
            <h2 class="newsletter-title">¡Únete a Nuestra Comunidad!</h2>
            <p class="newsletter-text">Suscríbete para recibir las últimas novedades sobre nuestros cursos, eventos y ofertas especiales.</p>
            <form class="newsletter-form">
                <input type="email" class="newsletter-input" placeholder="Tu correo electrónico" required>
                <button type="submit" class="newsletter-btn">Suscribirse</button>
            </form>
        </div>
    </div>
</section>