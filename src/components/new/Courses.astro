<section class="section courses" id="cursos">
  <div class="container">
    <h2 class="section-title text-center animate-on-scroll">
      Descubre nuestros cursos de formación profesional
    </h2>
    <div class="grid grid-3">
      {cursos.map((curso) => (
        <div class="course-card animate-on-scroll">
          <div class="course-image">
            <img src={curso.imagen} alt={curso.alt} />
          </div>
          <div class="course-content">
            <h3 class="course-title">{curso.titulo}</h3>
            <p class="course-text">{curso.descripcion}</p>
            <a href={curso.enlace} class="btn btn-outline">Más información</a>
          </div>
        </div>
      ))}
    </div>
  </div>
