---

<section class="section courses" id="cursos">
    <div class="container">
        <h2 class="section-title text-center animate-on-scroll">Descubre nuestros cursos de formación profesional</h2>
        <div class="grid grid-3">
            {courses.map((course) => (
                <div class="course-card animate-on-scroll">
                    <div class="course-image">
                        <img src={course.image} alt={course.alt}>
                    </div>
                    <div class="course-content">
                        <h3 class="course-title">{course.title}</h3>
                        <p class="course-text">{course.description}</p>
                        <a href="#" class="btn btn-outline">Más información</a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>